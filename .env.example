# Database Configuration
# Option 1: Use external database (production)
# DATABASE_URL=postgresql://user:password@host:5432/sinas

# Option 2: Use docker-compose postgres (local development)
# Leave DATABASE_URL commented out and set POSTGRES_PASSWORD below
# This will use the postgres service in docker-compose
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis Configuration
# Redis is always provided by docker-compose
# No configuration needed - automatically connects to redis://redis:6379/0

# Application Configuration
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production-must-be-secure
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# OTP Configuration
OTP_EXPIRE_MINUTES=10

# SMTP Configuration (for OTP emails)
SMTP_DOMAIN=pulsr.one
SMTP_HOST=smtp.tem.scaleway.comxw
SMTP_PORT=587
SMTP_USER=...
SMTP_PASSWORD=...

# LLM Provider Configuration
# Choose one provider as default

# For OpenAI
OPENAI_API_KEY=your-openai-api-key
# DEFAULT_LLM_PROVIDER=openai

# For Ollama (local models)
LOCAL_LLM_ENDPOINT=http://localhost:11434
DEFAULT_LLM_PROVIDER=ollama

# For private cloud deployment
# PRIVATE_CLOUD_ENDPOINT=https://your-llm-endpoint.com
# PRIVATE_CLOUD_API_KEY=your-api-key
# DEFAULT_LLM_PROVIDER=private

# Default model (optional, can be set per chat)
DEFAULT_MODEL=gemma3:4b

# Function Execution Settings
FUNCTION_TIMEOUT=300
MAX_FUNCTION_MEMORY=512

# Package Management
ALLOW_PACKAGE_INSTALLATION=true

# Encryption (for encrypting sensitive data like database connection strings)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-here

# Admin user (created automatically on startup)
# The user with this email will be added to the Admins group with full system access
# Only creates user if Admins group is empty
SUPERADMIN_EMAIL=kjeld.oostra@pulsr.io